<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_tela2"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editEmailUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Informe o E-mail do cliente"
        android:inputType="text"
        android:textColor="@color/preto"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/btlogin_gradient"
        android:gravity="center"
        android:text="HORA"
        android:textColor="@color/preto"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/eDataPadrao"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btDataPadrao"
        app:layout_constraintTop_toBottomOf="@+id/rdGroupPadrao" />

    <Spinner
        android:id="@+id/spinnerUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:entries="@array/horarios"
        android:prompt="@string/horaEscolhida"
        android:scrollbarStyle="insideInset"
        app:layout_constraintBottom_toTopOf="@+id/btInserir"
        app:layout_constraintEnd_toEndOf="@+id/btInserir"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btInserir"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btInserir"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/btlogin_gradient"
        android:gravity="center"
        android:text="Inserir"
        android:textColor="@color/preto"
        app:layout_constraintEnd_toEndOf="@+id/editEmailUsuario"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/editEmailUsuario"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/btDataPadrao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/btlogin_gradient"
        android:gravity="center"
        android:text="Data"
        android:textColor="@color/preto"
        app:layout_constraintStart_toStartOf="@+id/editEmailUsuario"
        app:layout_constraintTop_toBottomOf="@+id/rdGroupPadrao" />

    <RadioGroup
        android:id="@+id/rdGroupPadrao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/editEmailUsuario"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/editEmailUsuario"
        app:layout_constraintTop_toBottomOf="@+id/editEmailUsuario">


        <RadioButton
            android:id="@+id/rdSombrancelhaPadrao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sombrancelha" />

        <RadioButton
            android:id="@+id/rdManicurePadrao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manicure"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="233dp" />

        <RadioButton
            android:id="@+id/rdPedicurePadrao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedicure"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="233dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/eDataPadrao"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:ems="10"
        android:gravity="center"
        android:hint=""
        android:inputType="date"
        android:textColor="@color/preto"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="@+id/editEmailUsuario"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btDataPadrao"
        app:layout_constraintTop_toBottomOf="@+id/rdGroupPadrao"
        app:layout_constraintVertical_bias="0.723" />


</androidx.constraintlayout.widget.ConstraintLayout>